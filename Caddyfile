p.marache.net {
  reverse_proxy bibin:8000
}

wiki.marache.net {
  reverse_proxy wikijs:3000
}

englishify.uk {
  reverse_proxy englishify:8000
}

faas.marache.net {
  reverse_proxy faas:8000
}

marache.net www.marache.net {
  request_header Host marache-net-static.s3.eu-central-1.amazonaws.com
  reverse_proxy /img/* https://marache-net-static.s3.eu-central-1.amazonaws.com
  reverse_proxy /files/* https://marache-net-static.s3.eu-central-1.amazonaws.com
  reverse_proxy /projects/* https://marache-net-static.s3.eu-central-1.amazonaws.com

  root * /srv/marache-net/
  file_server
}


yaas.marache.net {
  basicauth {
    bob {$YAAS_BASICAUTH}
  }
  rewrite /files /files/
  rewrite / /status

  file_server /files/* browse {
    root /srv/yaas/
  }

  reverse_proxy /clean http://yaas:5000
  reverse_proxy /status http://yaas:5000
  reverse_proxy /download http://yaas:5000
}
